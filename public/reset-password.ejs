

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title> 
    <link rel="stylesheet"  href="./style.css"> 
</head>
<body>
    <div id="reset-password-container">
        <h2>Password Reset</h2>
        <p>Enter your new password below:</p>
        <form id="reset-password-form" action="/user/change-password" method="post">
            <input type="hidden" id="token-input" name="token" value="<%= token %>">
            <label for="new-password">New Password:</label>
            <input type="password" id="new-password" required>
            <label for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" required>
            <button type="submit">Reset Password</button>
        </form>
        <p id="reset-message"></p>
    </div>
    <script>
        function submitForm() {
            const token = document.getElementById('token-input').value;
            const newPassword = document.getElementById('new-password').value;
            const confirmNewPassword = document.getElementById('confirm-password').value; 
    
            // Example: Validate form data before submission
            if (!token || !newPassword || !confirmNewPassword) {
                alert('Please fill in all fields.');
                return;
            }
    
            // Example: Submit form data to the server using fetch or XMLHttpRequest
            fetch('/user/change-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ token, newPassword, confirmNewPassword }),
            })
            .then(response => response.json())
            .then(data => {
                console.log(data);
                // Handle the server response as needed
            })
            .catch(error => {
                console.error('Error:', error);
                // Handle errors
            });
        }
    </script>
</body>
</html>
